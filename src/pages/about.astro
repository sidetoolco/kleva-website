---
import MinimalLayout from '@layouts/MinimalLayout.astro';
import ZcalWidget from '@components/ZcalWidget.astro';
import Breadcrumbs from '@components/Breadcrumbs.astro';

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'About' }
];
---

<MinimalLayout title="About Kleva | AI-Powered Debt Collection Team for Latin America" description="Meet the team building LATAM's leading AI debt collection platform. 900K+ minutes monthly, 73% success rate. From Miami, serving Mexico to Argentina.">
  <main class="about-page">
    <div class="container">
      <Breadcrumbs items={breadcrumbs} />
    </div>
    
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <span class="hero-label">ABOUT KLEVA</span>
          <h1>Building the future of collections in Latin America</h1>
          <p class="hero-subtitle">
            We're transforming how financial institutions collect debt with AI that's more effective, 
            more humane, and more scalable than traditional methods.
          </p>
        </div>
      </div>
    </section>

    <!-- The Mission -->
    <section class="mission-section">
      <div class="container">
        <div class="mission-content">
          <span class="section-number">01</span>
          <h2>The mission driving us forward</h2>
          <p class="mission-statement">
            We're not just building another collections tool. We're building the 
            <strong>AI workforce for Latin America's financial industry.</strong>
          </p>
          
          <div class="roadmap">
            <div class="roadmap-item active">
              <span class="roadmap-phase">Today</span>
              <h4>Collections</h4>
              <p>Perfecting the hardest role in banking</p>
            </div>
            <div class="roadmap-item">
              <span class="roadmap-phase">Next</span>
              <h4>Dispute Resolution</h4>
              <p>Handling conflicts with empathy</p>
            </div>
            <div class="roadmap-item">
              <span class="roadmap-phase">Then</span>
              <h4>Fraud Prevention</h4>
              <p>Protecting customers proactively</p>
            </div>
            <div class="roadmap-item">
              <span class="roadmap-phase">Future</span>
              <h4>Full Service</h4>
              <p>AI agents for every financial role</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- The Team -->
    <section class="team-section">
      <div class="container">
        <div class="team-header">
          <span class="section-number">02</span>
          <h2>The team making it happen</h2>
          <p>Six obsessed builders solving Latin America's biggest financial challenge</p>
        </div>

        <div class="team-grid">
          <div class="team-member">
            <div class="member-name">Gonza</div>
            <div class="member-role">Product Owner</div>
            <p>Lives in customer data, ensuring we add value every single day</p>
          </div>
          
          <div class="team-member">
            <div class="member-name">Santi</div>
            <div class="member-role">Lead Developer</div>
            <p>Obsesses over making conversations feel natural, not robotic</p>
          </div>
          
          <div class="team-member">
            <div class="member-name">Os</div>
            <div class="member-role">Infrastructure</div>
            <p>Built systems handling thousands of simultaneous calls</p>
          </div>
          
          <div class="team-member">
            <div class="member-name">Lila</div>
            <div class="member-role">Problem Solver</div>
            <p>Achieved 94% address accuracy in LATAM (vs Google's 70%)</p>
          </div>
          
          <div class="team-member">
            <div class="member-name">Juli</div>
            <div class="member-role">Quality & AI</div>
            <p>Reviews every call, building AI that automatically improves</p>
          </div>
          
          <div class="team-member">
            <div class="member-name">JM</div>
            <div class="member-role">Cofounder</div>
            <p>Gets customers to their "wow moment" in days, not months</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <h2>Join us</h2>
          <p>
            Be part of the transformation. See how Kleva can revolutionize your collections.
          </p>
          <ZcalWidget mode="popup" buttonText="Book a 15-minute intro call" />
        </div>
      </div>
    </section>
  </main>
</MinimalLayout>

<style>
  .about-page {
    padding-top: var(--header-height-desktop);
  }

  /* Hero Section */
  .hero {
    padding: 120px 0 80px;
    background: linear-gradient(180deg, var(--color-gray-50) 0%, var(--color-white) 100%);
  }

  .hero-content {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }

  .hero-label {
    display: inline-block;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-gray-500);
    margin-bottom: 24px;
  }

  .hero h1 {
    font-size: 48px;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 24px;
    color: var(--color-black);
  }

  .hero-subtitle {
    font-size: 18px;
    line-height: 1.6;
    color: var(--color-gray-600);
    max-width: 720px;
    margin: 0 auto;
  }

  /* Section Numbers */
  .section-number {
    display: inline-block;
    font-size: 14px;
    font-weight: 700;
    color: var(--color-gray-400);
    margin-bottom: 16px;
  }

  /* Mission Section */
  .mission-section {
    padding: 80px 0;
    background: var(--color-white);
  }

  .mission-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .mission-content h2 {
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 24px;
    color: var(--color-black);
  }

  .mission-statement {
    font-size: 20px;
    line-height: 1.6;
    color: var(--color-gray-700);
    margin-bottom: 64px;
  }

  .roadmap {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  .roadmap-item {
    padding: 24px;
    background: var(--color-gray-50);
    border-radius: 12px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .roadmap-item.active {
    background: var(--color-black);
    color: var(--color-white);
  }

  .roadmap-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  }

  .roadmap-phase {
    display: inline-block;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-gray-500);
    margin-bottom: 12px;
  }

  .roadmap-item.active .roadmap-phase {
    color: var(--color-gray-400);
  }

  .roadmap-item h4 {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--color-black);
  }

  .roadmap-item.active h4 {
    color: var(--color-white);
  }

  .roadmap-item p {
    font-size: 14px;
    color: var(--color-gray-600);
  }

  .roadmap-item.active p {
    color: var(--color-gray-300);
  }

  /* Team Section */
  .team-section {
    padding: 80px 0;
    background: var(--color-gray-50);
  }

  .team-header {
    text-align: center;
    margin-bottom: 64px;
  }

  .team-header h2 {
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 12px;
    color: var(--color-black);
  }

  .team-header p {
    font-size: 16px;
    color: var(--color-gray-600);
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .team-member {
    padding: 32px;
    background: var(--color-white);
    border-radius: 12px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .team-member:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  }

  .member-name {
    font-size: 20px;
    font-weight: 600;
    color: var(--color-black);
    margin-bottom: 4px;
  }

  .member-role {
    font-size: 14px;
    color: var(--color-gray-500);
    margin-bottom: 16px;
  }

  .team-member p {
    font-size: 14px;
    line-height: 1.5;
    color: var(--color-gray-600);
  }

  /* CTA Section */
  .cta-section {
    padding: 80px 0;
    background: var(--color-black);
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 16px;
    color: var(--color-white);
  }

  .cta-content p {
    font-size: 16px;
    color: var(--color-gray-300);
    margin-bottom: 32px;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .hero h1 {
      font-size: 32px;
    }

    .roadmap {
      grid-template-columns: 1fr;
    }

    .team-grid {
      grid-template-columns: 1fr;
    }

    .about-page {
      padding-top: var(--header-height-mobile);
    }
  }

  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }
</style>