---
import MinimalLayout from '@layouts/MinimalLayout.astro';
import ZcalWidget from '@components/ZcalWidget.astro';
import Breadcrumbs from '@components/Breadcrumbs.astro';

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Contact' }
];
---

<MinimalLayout title="Contact Kleva | Book AI Debt Collection Demo - Get ROI in 30 Days" description="Schedule a 15-minute demo of Kleva's AI collection platform. See live Spanish/Portuguese calls, compliance features, ROI calculator. Miami-based, serving all LATAM.">
  <main class="contact-page">
    <div class="container">
      <Breadcrumbs items={breadcrumbs} />
    </div>
    
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <span class="hero-label">GET STARTED</span>
          <h1>Ready to transform your collections?</h1>
          <p class="hero-subtitle">
            Book a 15-minute intro call to see Kleva in action and get a custom ROI calculation for your institution
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Options -->
    <section class="contact-options">
      <div class="container">
        <div class="options-grid">
          <!-- Schedule Call -->
          <div class="option-card primary">
            <div class="option-header">
              <h2>Schedule a call</h2>
              <p>The fastest way to see Kleva in action</p>
            </div>
            <div class="calendar-container">
              <ZcalWidget mode="inline" />
            </div>
          </div>

          <!-- Direct Contact -->
          <div class="option-card">
            <div class="option-header">
              <h2>Direct contact</h2>
              <p>Reach out directly to our team</p>
            </div>
            
            <div class="contact-methods">
              <div class="contact-method">
                <span class="method-label">Email</span>
                <a href="mailto:hi@kleva.co" class="method-value">hi@kleva.co</a>
              </div>
              
              <div class="contact-method">
                <span class="method-label">WhatsApp</span>
                <a href="https://wa.me/17048169059" class="method-value">+1 704-816-9059</a>
              </div>
              
              <div class="contact-method">
                <span class="method-label">Office</span>
                <span class="method-value">Miami, Florida</span>
              </div>
            </div>

            <div class="response-time">
              <span>We typically respond within 2 hours during business hours</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="final-cta">
      <div class="container">
        <div class="cta-content">
          <h2>Stop losing money on collections</h2>
          <p>Every day you wait costs you thousands in lost recovery and wasted resources</p>
          <ZcalWidget mode="popup" buttonText="Book your intro call now" />
        </div>
      </div>
    </section>
  </main>
</MinimalLayout>

<style>
  .contact-page {
    padding-top: var(--header-height-desktop);
  }

  /* Hero */
  .hero {
    padding: 120px 0 80px;
    background: linear-gradient(180deg, var(--color-gray-50) 0%, var(--color-white) 100%);
  }

  .hero-content {
    text-align: center;
    max-width: 720px;
    margin: 0 auto;
  }

  .hero-label {
    display: inline-block;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-gray-500);
    margin-bottom: 24px;
  }

  .hero h1 {
    font-size: 48px;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 24px;
    color: var(--color-black);
  }

  .hero-subtitle {
    font-size: 18px;
    line-height: 1.6;
    color: var(--color-gray-600);
  }

  /* Contact Options */
  .contact-options {
    padding: 80px 0;
    background: var(--color-white);
  }

  .options-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 32px;
  }

  .option-card {
    padding: 48px;
    background: var(--color-gray-50);
    border-radius: 16px;
    border: 1px solid var(--color-gray-200);
  }

  .option-card.primary {
    background: var(--color-white);
  }

  .option-header {
    margin-bottom: 32px;
  }

  .option-header h2 {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--color-black);
  }

  .option-header p {
    font-size: 14px;
    color: var(--color-gray-600);
  }

  .calendar-container {
    min-height: 500px;
    background: var(--color-gray-50);
    border-radius: 12px;
    padding: 24px;
  }

  .contact-methods {
    margin-bottom: 32px;
  }

  .contact-method {
    padding: 16px 0;
    border-bottom: 1px solid var(--color-gray-200);
  }

  .contact-method:last-child {
    border-bottom: none;
  }

  .method-label {
    display: block;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-gray-500);
    margin-bottom: 4px;
  }

  .method-value {
    font-size: 18px;
    font-weight: 500;
    color: var(--color-black);
  }

  a.method-value {
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a.method-value:hover {
    color: var(--color-gray-700);
  }

  .response-time {
    padding: 16px;
    background: var(--color-white);
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 14px;
    color: var(--color-gray-600);
  }

  /* Final CTA */
  .final-cta {
    padding: 80px 0;
    background: var(--color-black);
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 16px;
    color: var(--color-white);
  }

  .cta-content p {
    font-size: 16px;
    color: var(--color-gray-300);
    margin-bottom: 32px;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .hero h1 {
      font-size: 32px;
    }

    .options-grid {
      grid-template-columns: 1fr;
    }

    .contact-page {
      padding-top: var(--header-height-mobile);
    }
  }

  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }
</style>