---
import MinimalLayout from '@layouts/MinimalLayout.astro';
import Breadcrumbs from '@components/Breadcrumbs.astro';

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Terms of Service' }
];

const title = "Terms of Service - Kleva";
const description = "Terms of Service for Kleva AI debt collection platform";
---

<MinimalLayout title={title} description={description}>
  <article class="legal-page">
    <div class="container">
      <Breadcrumbs items={breadcrumbs} />
      
      <header class="page-header">
        <h1>Terms of Service</h1>
        <p class="last-updated">Last updated: November 2024</p>
      </header>

