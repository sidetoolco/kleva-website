---
import { Icon } from 'astro-icon/components';
---

<a href="https://clutch.co/profile/sidetool" target="_blank" class="reviews">
	<p>“Highest satisfaction” software development system</p>
	<div class="clutch__wrapper">
		<div class="stars">
			{Array.from({ length: 5 }).map(() => <Icon name="ion:star-sharp" class="star" />)}
		</div>
		<svg xmlns="http://www.w3.org/2000/svg" width="21" height="22" viewBox="0 0 21 22" fill="none">
			<path
				d="M15.9452 15.4898C14.8228 16.3878 13.2514 17.0612 11.6799 17.0612C8.0881 17.0612 5.61871 14.3673 5.61871 10.7755C5.61871 7.18367 8.0881 4.71428 11.6799 4.71428C13.2514 4.71428 14.8228 5.16326 15.9452 6.28571L16.6187 6.95918L20.2105 3.59183L19.3126 2.91836C17.2922 1.12244 14.5983 0 11.6799 0C5.39422 0 0.679932 4.71428 0.679932 11C0.679932 17.2857 5.39422 22 11.6799 22C14.5983 22 17.2922 20.8776 19.3126 19.0816L20.2105 18.4082L16.6187 14.8163L15.9452 15.4898Z"
				fill="white"></path>
			<path
				d="M11.4555 14.5918C13.4392 14.5918 15.0473 12.9837 15.0473 11C15.0473 9.01626 13.4392 7.40814 11.4555 7.40814C9.47177 7.40814 7.86365 9.01626 7.86365 11C7.86365 12.9837 9.47177 14.5918 11.4555 14.5918Z"
				fill="#EF4335"></path>
		</svg>
	</div>
</a>

<style>
	.reviews {
		position: relative;
		z-index: 10;
		display: flex;
		flex-direction: column;
		gap: 12px;
	}
	@media (min-width: 1440px) {
		.reviews {
			flex-direction: row;
		}
	}
	.stars {
		display: flex;
		gap: 2px;
		align-items: center;
	}
	.star {
		color: rgb(var(--clr-violet));
	}
	p {
		color: rgb(var(--clr-white));
		font-size: 16px;
		font-weight: 500;
		line-height: 1.5;
		font-weight: 600;
	}

	@media (min-width: 1280px) {
		p {
			max-width: unset;
		}
	}
	.clutch__wrapper {
		color: rgba(var(--clr-white), 0.5);
		font-size: 16px;
		font-weight: 400;
		display: flex;
		align-items: center;
		gap: 8px;
	}

	.strong {
		font-weight: 700;
	}
</style>
