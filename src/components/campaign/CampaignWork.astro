---
import { Icon } from 'astro-icon/components';

const blocks = [
	{
		icon: 'search',
		text: 'We dive into your needs and conduct a sprint to find the product requirements.',
	},
	{
		icon: 'frame-select',
		text: 'We build a functional prototype to validate feasibility of the project.',
	},
	{
		icon: 'circle-spark',
		text: 'Receive a fast, custom-built AI automations and custom manteinance.',
	},
];
---

<div class="campaign__work">
	<h3>How we work — It’s easy</h3>
	<div class="work__cards">
		{
			blocks.map((block) => (
				<div class="work__card dark__glass">
					<Icon name={block.icon} />
					<p>{block.text}</p>
				</div>
			))
		}
	</div>
</div>

<style>
	h3 {
		color: rgb(var(--clr-white));
		font-size: 28px;
		margin-bottom: 32px;
	}

	.work__cards {
		display: grid;
		gap: 16px;
	}

	.work__card {
		display: flex;
		flex-direction: column;
		gap: 16px;
		padding: 24px;
		border-radius: 24px;
		border: 1px solid rgb(var(--clr-white), 0.1);
	}

	[data-icon] {
		flex-shrink: 0;
		width: 24px;
		height: 24px;
	}

	p {
		color: rgb(var(--clr-white));
		font-size: 18px;
	}

	@media (min-width: 640px) {
		.work__card {
			flex-direction: row;
		}
	}

	@media (min-width: 768px) {
		h3 {
			font-size: 28px;
			margin-bottom: 48px;
		}

		.work__cards {
			grid-template-columns: repeat(3, 1fr);
			grid-auto-rows: auto;
		}

		.work__card {
			flex-direction: column;
		}

		[data-icon] {
			width: 28px;
			height: 28px;
		}
	}

	@media (min-width: 1280px) {
		.work__card {
			flex-direction: row;
		}
	}
</style>
