---
import type { CaseStudy } from '../../types/sanity.types';
import PortableText from '@components/PortableText.astro';

interface Props {
	caseStudy: CaseStudy;
}

const { caseStudy } = Astro.props;
---

<article class="page__section light relative z-20 pb-24 pt-12 md:pb-36 md:pt-16">
	<header class="fade-in container__wide my-0 mb-8 mr-auto flex flex-col md:mb-12">
		<div class="flex max-w-screen-lg flex-col gap-6">
			<h3 class="section__title text-black">About the project</h3>
			<PortableText portableText={caseStudy.description} />
		</div>
	</header>
	<section class="container__wide">
		<ul class="grid grid-cols-1 gap-x-12 md:grid-cols-2">
			<li class="fade-in group flex items-start gap-4 border-b border-slate-900 px-4 py-6 md:px-8 lg:gap-5">
				<div
					class="relative grid aspect-square w-12 shrink-0 place-items-center border-black transition-transform group-hover:rotate-45"
				>
					<div style={`background-color: ${caseStudy.colorTheme?.hex}`} class="absolute h-[2px] w-8"></div>
					<div style={`background-color: ${caseStudy.colorTheme?.hex}`} class="absolute h-8 w-[2px]"></div>
					<div style={`background-color: ${caseStudy.colorTheme?.hex}`} class="absolute h-[2px] w-8 rotate-45"></div>
					<div style={`background-color: ${caseStudy.colorTheme?.hex}`} class="absolute h-[2px] w-8 -rotate-45"></div>
				</div>
				<div class="h-fit">
					<p class="text-xl text-black">Industry</p>
					<p class="text-lg text-secondary">{caseStudy.industry}</p>
				</div>
			</li>
			<li class="fade-in group flex items-start gap-4 border-b border-slate-900 px-4 py-6 md:px-8 lg:gap-5">
				<div
					class="relative grid aspect-square w-12 shrink-0 place-items-center border-black transition-transform group-hover:rotate-45"
				>
					<div style={`background-color: ${caseStudy.colorTheme?.hex}`} class="absolute h-[2px] w-8"></div>
					<div style={`background-color: ${caseStudy.colorTheme?.hex}`} class="absolute h-8 w-[2px]"></div>
					<div style={`background-color: ${caseStudy.colorTheme?.hex}`} class="absolute h-[2px] w-8 rotate-45"></div>
					<div style={`background-color: ${caseStudy.colorTheme?.hex}`} class="absolute h-[2px] w-8 -rotate-45"></div>
				</div>
				<div class="h-fit">
					<p class="text-xl text-black">Team Size</p>
					<p class="text-lg text-secondary">{caseStudy.teamSize}</p>
				</div>
			</li>
			<li class="fade-in group flex items-start gap-4 border-b border-slate-900 px-4 py-6 md:px-8 lg:gap-5">
				<div
					class="relative grid aspect-square w-12 shrink-0 place-items-center border-black transition-transform group-hover:rotate-45"
				>
					<div style={`background-color: ${caseStudy.colorTheme?.hex}`} class="absolute h-[2px] w-8"></div>
					<div style={`background-color: ${caseStudy.colorTheme?.hex}`} class="absolute h-8 w-[2px]"></div>
					<div style={`background-color: ${caseStudy.colorTheme?.hex}`} class="absolute h-[2px] w-8 rotate-45"></div>
					<div style={`background-color: ${caseStudy.colorTheme?.hex}`} class="absolute h-[2px] w-8 -rotate-45"></div>
				</div>
				<div class="h-fit">
					<p class="text-xl text-black">Location</p>
					<p class="text-lg text-secondary">{caseStudy.location}</p>
				</div>
			</li>
			<li class="fade-in group flex items-start gap-4 border-b border-slate-900 px-4 py-6 md:px-8 lg:gap-5">
				<div
					class="relative grid aspect-square w-12 shrink-0 place-items-center border-black transition-transform group-hover:rotate-45"
				>
					<div style={`background-color: ${caseStudy.colorTheme?.hex}`} class="absolute h-[2px] w-8"></div>
					<div style={`background-color: ${caseStudy.colorTheme?.hex}`} class="absolute h-8 w-[2px]"></div>
					<div style={`background-color: ${caseStudy.colorTheme?.hex}`} class="absolute h-[2px] w-8 rotate-45"></div>
					<div style={`background-color: ${caseStudy.colorTheme?.hex}`} class="absolute h-[2px] w-8 -rotate-45"></div>
				</div>
				<div class="h-fit">
					<p class="text-xl text-black">Duration</p>
					<p class="text-lg text-secondary">{caseStudy.duration}</p>
				</div>
			</li>
		</ul>
	</section>
</article>
