---
//Types
import type { CaseStudy } from '../../types/sanity.types';

// Libs
import { Image } from 'astro:assets';
import { urlForImage } from '@sanity/lib/url-for-image';

interface Props {
	caseStudy: CaseStudy;
}

const { caseStudy } = Astro.props;
---

<article class="bg-black py-12 md:py-20">
	<div class="container__wide grid grid-cols-1 gap-8 md:grid-cols-2 md:gap-12">
		<section class="max-w-lg space-y-6">
			<header class="space-y-2">
				<span class="inline-block text-lg text-[#00E1E1] md:text-2xl">Killer Feature</span>
				<h3 class="section__title text-white">
					{caseStudy.killerFeatureTitle}
				</h3>
			</header>
			<p class="text-text-secondary md:text-lg">
				{caseStudy.killerFeatureDescription}
			</p>
		</section>
		<section
			style={`background: ${caseStudy.colorTheme?.hex}; background: radial-gradient(circle, #000000 20%, ${caseStudy.colorTheme?.hex} 100%);`}
			class="grid aspect-[17/16] w-full items-center rounded-2xl p-2 md:max-w-[686px] md:p-4 xl:p-8 desktop:w-[686px]"
		>
			{
				caseStudy.killerFeatureImage && (
					<Image
						src={urlForImage(caseStudy.killerFeatureImage).url()}
						alt={caseStudy.killerFeatureTitle ?? 'Killer Feature Image'}
						inferSize={true}
						class="w-full object-contain"
					/>
				)
			}
		</section>
	</div>
</article>
