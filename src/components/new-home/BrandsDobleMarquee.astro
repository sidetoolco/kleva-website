</section>

<style>
	.gradient {
		position: absolute;
		z-index: 10;
		width: 100%;
		height: 100%;
		background: #151515;
		background: linear-gradient(90deg, rgba(21, 21, 21, 1) 0%, rgba(21, 21, 21, 0) 15%);
	}
	.gradient.left {
		left: 0;
		top: 0;
	}
	.gradient.right {
		right: 0;
		top: 0;
		transform: rotate(180deg);
	}
	.section {
		overflow: hidden;
	}
	h3 {
		font-family: var(--font-titles);
		color: rgb(var(--clr-white));
		font-size: 32px;
		line-height: 1;
		letter-spacing: -1px;
		text-align: center;
		margin: 0 auto 66px auto;
	}

	.brands-marquee {
		display: flex;
		align-items: center;
		margin-block: 16px;
	}
	@media (min-width: 768px) {
		h3 {
			font-size: 40px;
		}
		.brands-marquee {
			margin-block: 36x;
		}
	}
	.brands-marquee img {
		padding-right: 48px;
	}
	.brands-marquee img:last-child {
		margin-right: 0px;
	}
	.brands-marquee .top,
	.brands-marquee .bottom {
		flex-shrink: 0;
		display: flex;
		justify-content: flex-start;
	}
	.brands-marquee.bottom {
		justify-content: flex-end;
	}
	.brands-marquee .top {
		animation: slide-left 40s linear infinite;
	}
	.brands-marquee .bottom {
		justify-content: flex-end;
		animation: slide-right 40s linear infinite;
	}
	.brands-marquee img {
		height: 42px;
		width: auto;
	}

	@media (min-width: 768px) {
		.brands-marquee img {
			height: 56px;
		}
	}

	@keyframes slide-left {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(-100%);
		}
	}

	@keyframes slide-right {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(100%);
		}
	}
</style>
