<style>
	section {
		background-color: rgb(var(--clr-black));
		color: rgb(var(--clr-white));
		position: relative;
	}
	.arrow {
		width: 124px;
		height: 124px;
		margin-top: 24px;
	}
	.arrow svg {
		width: 100%;
		height: 100%;
	}
	.content {
		margin-top: 24px;
	}
	.header__block {
		display: flex;
		flex-direction: column;
		gap: 24px;
		padding: 28px 32px;
		border: 1px solid rgba(var(--clr-white), 0.25);
		border-bottom: none;
	}

	.big__text {
		color: #be79ff;
		font-size: 48px;
		font-style: normal;
		line-height: 100%;
		letter-spacing: -1.2px;
	}
	.small__text {
		font-family: var(--font-titles);
		font-size: 28px;
		font-style: normal;
		line-height: 100%;
		letter-spacing: -0.7px;
	}
	.button__wrapper {
		margin-top: auto;
	}
	.content__block {
		padding: 0px 0px;
		border: 1px solid rgba(var(--clr-white), 0.25);
	}
	.block__text {
		font-family: var(--font-titles);
		padding: 28px 32px;
		border-bottom: 1px solid rgba(var(--clr-white), 0.25);
	}
	.block__text:last-child {
		border-bottom: none;
	}
	.text__violet {
		display: block;
		color: rgb(var(--clr-violet));
	}

	@media (min-width: 768px) {
		.content {
			display: flex;
		}
		.header__block {
			width: fit-content;
			flex-grow: 0;
			flex-shrink: 0;
			border-bottom: 1px solid rgba(var(--clr-white), 0.25);
			border-right: none;
		}
		.content__block {
			flex-grow: 1;
		}
		.block__text {
			font-size: 20px;
		}
		.arrow {
			position: absolute;
			right: 0;
			top: 0;
			width: 220px;
			height: 208px;
			margin: 48px 48px 0 0;
		}
	}
</style>
