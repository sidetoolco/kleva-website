---
import ButtonCircleArrowLink from '@components/Button/ButtonCircleArrowLink.astro';

const blocks = [
	'One active request at a time',
	'Unlimited queued requests',
	'Unlimited revisions',
	'Pause anytime, zero hassle',
	'Direct Slack support included',
];
---

<section class="section page__section dark">
	<header>
		<span class="section__tag dark">Pricing</span>
		<h2 class="section__heading">Clear Pricing, Zero Hassle</h2>
	</header>
	<div class="content">
		<div class="header__block">
			<h5>
				<span class="big__text">$5,900</span><br />
				<span class="small__text">/month</span>
			</h5>
			<p>We also do custom development, <span class="text__violet">starting at $20.000</span></p>
			<div class="button__wrapper">
				<ButtonCircleArrowLink href="/" label="Get Started Now" fullWidth asButton />
			</div>
		</div>
		<div class="content__block">
			{blocks.map((block) => <p class="block__text">{block}</p>)}
		</div>
	</div>
