---
//Types
import type { AutomationSolution } from '../../types/sanity.types';
//Libs
import { Image } from 'astro:assets';
import { urlForImage } from '@sanity/lib/url-for-image';
interface Props {
	automationSolution: AutomationSolution;
}

const { automationSolution } = Astro.props;
---

<article class="page__section light">
	<header class="container__wide mb-8 space-y-4 text-center lg:space-y-8">
		<span class="block font-titles text-lg text-primary lg:text-2xl">{automationSolution.subTitle}</span>
		<h1 class="font-titles text-5xl leading-[1] tracking-tight lg:text-[70px]">{automationSolution.title}</h1>
	</header>
	<section class="px-4 sm:px-8 lg:px-12">
		{
			automationSolution.solutionBanner && (
				<Image
					src={urlForImage(automationSolution.solutionBanner).url()}
					alt={automationSolution.title ?? ''}
					inferSize
					class="mx-auto"
				/>
			)
		}
	</section>
	<section class="container__wide">
		<p class="max-w-4xl py-12 md:py-20">{automationSolution.solutionDescription}</p>
	</section>
</article>

<style>
	article {
		overflow: hidden;
		padding-top: calc(var(--header-height-mobile) + 64px);
	}

	@media (min-width: 768px) {
		article {
			padding-top: calc(var(--header-height-desktop) + 82px);
		}
	}

	@media (min-width: 1024px) {
		article {
			padding-top: calc(var(--header-height-desktop) + 120px);
		}
	}
</style>
