---
// Components
import ButtonPrimary from '@components/Button/ButtonPrimary.astro';
// Libs
import { Image } from 'astro:assets';
// Assets
import big from '@assets/small__engine.svg';

const values = [
	{
		title: 'Default to Action.',
		description: 'We get sh*t done.',
	},
	{
		title: 'Put Customers First.',
		description: 'Even when it costs us.',
	},
	{
		title: 'Own it.',
		description: 'No excuses, just accountability.',
	},
	{
		title: 'Assume Positive Intent.',
		description: 'Open dialogue — silent grudges.',
	},
	{
		title: 'Share Everything.',
		description: 'Wins, losses, lessons—we’re transparent by default.',
	},
	{
		title: 'Have Fun.',
		description: 'Life’s short. Build cool stuff.',
	},
	{
		title: 'No Special Treatment.',
		description: 'Titles don’t matter, output does.',
	},
];
---

<section
	id="about-core"
	class="page__section light mb-24 space-y-12 overflow-hidden pt-12 md:mb-36 md:space-y-[72px] md:pt-[72px]"
>
	<section class="container__wide relative flex-row-reverse items-center gap-8 sm:flex md:gap-16">
		<div class="relative z-10 space-y-4">
			<h2 class="fade-in section__title text-black">Why We <span class="font-semibold">Exist</span></h2>
			<p class="fade-in section__text max-w-xl text-secondary">
				Software is only useful if it solves real problems. Whether we’re streamlining fast-food orders with AI or
				helping a solopreneur launch their dream MVP, we’re here to make big ideas real. No fluff. No “raise money and
				hope.” <span class="font-semibold">Just building things that work.</span>
			</p>
		</div>
		<div
			class="img__wrapper absolute -bottom-full -right-1/3 z-10 mx-auto my-12 max-w-80 shrink-0 translate-y-1/4 sm:relative sm:bottom-auto sm:right-auto sm:my-0 sm:w-72 sm:max-w-none sm:translate-y-0 md:w-[382px]"
		>
			<Image src={big} alt="Big Engine" class="h-full w-full" />
			<div class="radial"></div>
		</div>
	</section>
	<section class="container__wide relative z-10 mt-12 space-y-12">
		<div class="flex items-start justify-between">
			<h2 class="fade-in section__title text-black">Our <span class="font-semibold">Values</span></h2>
			<ButtonPrimary
				size="small"
				link={true}
				target="_blank"
				href="https://apply.workable.com/sidetool/"
				label="Work With Us"
			/>
		</div>
		<ul class="grid grid-cols-1 gap-6 sm:grid-cols-2 sm:gap-8 lg:gap-x-8 lg:gap-y-12">
			{
				values.map((value) => (
					<li class="fade-in group flex items-start gap-4 px-8">
						<div class="relative grid aspect-square w-8 shrink-0 place-items-center border-black transition-transform group-hover:rotate-45 md:w-10">
							<div class="absolute h-[1px] w-6 bg-black transition-colors group-hover:bg-primary md:h-[2px] md:w-8" />
							<div class="absolute h-6 w-[1px] bg-black transition-colors group-hover:bg-primary md:h-8 md:w-[2px]" />
							<div class="absolute h-[1px] w-6 rotate-45 bg-black transition-colors group-hover:bg-primary md:h-[2px] md:w-8" />
							<div class="absolute h-[1px] w-6 -rotate-45 bg-black transition-colors group-hover:bg-primary md:h-[2px] md:w-8" />
						</div>
						<div>
							<p class="text-xl font-semibold text-black">{value.title}</p>
							<p class="text-lg text-secondary">{value.description}</p>
						</div>
					</li>
				))
			}
		</ul>
	</section>
</section>

<style>
	.radial {
		opacity: 0.25;
		background: radial-gradient(50% 50% at 50% 50%, #be79ff 0%, rgba(0, 0, 0, 0) 100%);
		border-radius: 1239px;
		position: absolute;
		z-index: 1;
		left: 0;
		bottom: -18%;
		width: 75vw;
		min-width: 200px;
		aspect-ratio: 1/1;
	}

	@media (min-width: 640px) {
		.radial {
			left: -154%;
			bottom: -120%;
			max-width: 682px;
		}
	}
</style>

<script>
	import gsap from 'gsap';
	import ScrollTrigger from 'gsap/ScrollTrigger';
	gsap.registerPlugin(ScrollTrigger);

	document.addEventListener('DOMContentLoaded', () => {
		gsap
			.timeline({
				scrollTrigger: {
					trigger: '#about-core .img__wrapper',
					start: 'top bottom',
					end: 'bottom top',
					scrub: true,
				},
			})
			.to('#about-core .img__wrapper img', {
				rotate: -18,
				ease: 'none',
			});
	});
</script>
