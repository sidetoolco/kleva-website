---
import ButtonCircleArrowLink from '@components/Button/ButtonCircleArrowLink.astro';
import { Image } from 'astro:assets';
import arrow from '@assets/arrow__right__up.svg';
---

<div class="container__wide relative z-10 flex w-full flex-col items-start justify-between gap-8 sm:flex-row">
	<article class="space-y-4">
		<h4 class="fade-in font-titles text-5xl leading-[1.2] text-white lg:text-nowrap xl:text-[70px]">
			See if Sidetool is right for you <br />
			<span class="violet">(it totally is)</span>
		</h4>
		<p class="fade-in section__text w- max-w-screen-sm text-text-secondary">Schedule a quick, guided tour.</p>
		<div class="pt-4 md:pt-8">
			<ButtonCircleArrowLink
				target="_blank"
				href="https://zcal.co/i/ZD_tNCwz"
				label="Book a 15-min intro call"
				asButton
			/>
		</div>
	</article>
	<div class="my-8 mr-auto w-20 max-w-72 sm:ml-auto sm:mr-0 sm:w-40 sm:min-w-20 lg:w-full">
		<Image
			src={arrow}
			alt="Arrow"
			width={274}
			height={258}
			class="transition-duration-300 w-full transition-transform ease-out hover:rotate-45"
		/>
	</div>
</div>

<style>
	h4 {
		font-family: var(--font-titles);
		font-size: 48px;
		line-height: 1;
		letter-spacing: -1.75px;
	}

	h4 .violet {
		color: rgb(var(--clr-violet));
		font-weight: 300;
	}

	@media (min-width: 1280px) {
		h4 {
			font-size: 70px;
		}
	}
</style>
