          <span class="stat">45+ dialects</span>
        </div>
      </div>

      <!-- Feature 2: Smart Negotiation -->
      <div class="feature-card">
        <div class="feature-icon">
          <!-- AI/Brain icon -->
          <svg viewBox="0 0 48 48" class="icon-svg">
            <rect x="14" y="14" width="20" height="20" rx="2" fill="none" stroke="currentColor" stroke-width="1.5" opacity="0.3"/>
            <circle cx="24" cy="24" r="8" fill="none" stroke="currentColor" stroke-width="1.5" class="icon-path"/>
