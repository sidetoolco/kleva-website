<section class="animated-features" id="features">
  <div class="container">
    <div class="section-header">
      <span class="section-label">CAPABILITIES</span>
      <h2>Why Kleva outperforms human agents</h2>
      <p>Built from the ground up for LATAM's unique collection challenges</p>
    </div>

    <div class="features-grid">
      <!-- Feature 1: Voice AI -->
      <div class="feature-card">
        <div class="feature-icon">
          <!-- Phone/Call icon -->
          <svg viewBox="0 0 48 48" class="icon-svg">
            <circle cx="24" cy="24" r="20" fill="none" stroke="currentColor" stroke-width="1" opacity="0.2"/>
